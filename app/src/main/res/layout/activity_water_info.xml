<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterInfo">
    <TextView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/rate_w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/water"
        app:layout_constraintBottom_toTopOf="@id/values"
        android:text="100 ₽/м³"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="88dp"
        android:id="@+id/water"
        android:src="@drawable/water"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rate_w"
        app:layout_constraintBottom_toTopOf="@id/values"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/values"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/water"
        app:layout_constraintBottom_toTopOf="@id/bill_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:id="@+id/resource_w"
            android:text="-"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sum_w"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:id="@+id/sum_w"
            android:text="-"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resource_w"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bill_list"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/values"
        app:layout_constraintBottom_toBottomOf="parent"/>z

</android.support.constraint.ConstraintLayout>