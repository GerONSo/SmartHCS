<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="8dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:textSize="15sp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toTopOf="@id/cost"
            card_view:layout_constraintRight_toLeftOf="@id/logo"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/courier"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cost"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:textSize="15sp"
            card_view:layout_constraintRight_toLeftOf="@id/logo"
            card_view:layout_constraintTop_toBottomOf="@id/name"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/courier"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/computer"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@id/cost"/>
    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>   